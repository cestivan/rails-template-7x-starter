<div class="space-y-6">
  <!-- Page Title -->
  <div class="flex items-center space-x-4">
    <%%= link_to admin_<%= plural_name %>_path, class: "btn btn-ghost btn-sm" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to <%= humanized_plural_name %>
    <%% end %>
    <h1 class="text-3xl font-bold">Create New <%= humanized_name %></h1>
  </div>

  <!-- Form -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <%%= form_with model: [:admin, @<%= singular_name %>], local: true, class: "space-y-6" do |form| %>
        <%%= render 'shared/error_messages', model: @<%= singular_name %> %>

<% all_form_fields.each do |field| -%>
<% if field[:type] == :attribute -%>
<% attribute = field[:attribute] -%>
        <!-- <%= attribute.name.humanize %> -->
<% if attribute.type.to_s == 'boolean' -%>
        <div class="form-control">
          <label class="label cursor-pointer justify-start">
            <%%= form.<%= form_field_for(attribute) %> :<%= attribute.name %>, 
                  class: "<%= input_class_for(attribute) %> <%= input_class_for(attribute) %>-primary mr-3" %>
            <span class="label-text font-medium"><%= attribute.name.humanize %></span>
          </label>
        </div>
<% else -%>
        <div class="form-control">
          <%%= form.label :<%= attribute.name %>, class: "label" do %>
            <span class="label-text font-medium"><%= attribute.name.humanize %><%% if field_required?(@<%= singular_name %>, :<%= attribute.name %>) %> <span class="text-red-500">*</span><%% end %></span>
          <%% end %>
          <%%= form.<%= form_field_for(attribute) %> :<%= attribute.name %>, {
<% if attribute.type.to_s == 'text' -%>
            rows: 5,
<% end -%>
            placeholder: "Enter <%= attribute.name.humanize.downcase %>...",
            class: "<%= input_class_for(attribute) %> <%= input_class_for(attribute) %>-bordered w-full"
          }.merge(field_required?(@<%= singular_name %>, :<%= attribute.name %>) ? { required: true } : {}) %>
          <%% if @<%= singular_name %>.errors[:<%= attribute.name %>].any? %>
            <label class="label">
              <span class="label-text-alt text-red-500"><%%= @<%= singular_name %>.errors[:<%= attribute.name %>].first %></span>
            </label>
          <%% end %>
        </div>
<% end -%>
<% elsif field[:type] == :enum -%>
        <!-- <%= field[:enum_name].humanize %> -->
        <div class="form-control">
          <%%= form.label :<%= field[:enum_name] %>, class: "label" do %>
            <span class="label-text font-medium"><%= field[:enum_name].humanize %><%% if field_required?(@<%= singular_name %>, :<%= field[:enum_name] %>) %> <span class="text-red-500">*</span><%% end %></span>
          <%% end %>
          <%%= form.select :<%= field[:enum_name] %>, 
              options_for_select([['Select <%= field[:enum_name].humanize %>', '']] + <%= enum_options_for_select(field[:enum_name], field[:enum_values]).inspect %>, @<%= singular_name %>.<%= field[:enum_name] %>),
              {},
              { class: "select select-bordered w-full" } %>
          <%% if @<%= singular_name %>.errors[:<%= field[:enum_name] %>].any? %>
            <label class="label">
              <span class="label-text-alt text-red-500"><%%= @<%= singular_name %>.errors[:<%= field[:enum_name] %>].first %></span>
            </label>
          <%% end %>
        </div>
<% elsif field[:type] == :association -%>
<% association = field[:association] -%>
        <!-- <%= association[:name].to_s.humanize %> -->
        <div class="form-control">
          <%%= form.label :<%= association[:foreign_key] %>, class: "label" do %>
            <span class="label-text font-medium"><%= association[:name].to_s.humanize %><%% if field_required?(@<%= singular_name %>, :<%= association[:name] %>) %> <span class="text-red-500">*</span><%% end %></span>
          <%% end %>
          <%%= form.select :<%= association[:foreign_key] %>, 
              options_for_select([['Select <%= association[:name].to_s.humanize %>', '']] + <%= association_options_method(association) %>, @<%= singular_name %>.<%= association[:foreign_key] %>),
              {},
              { class: "select select-bordered w-full" } %>
          <%% if @<%= singular_name %>.errors[:<%= association[:foreign_key] %>].any? %>
            <label class="label">
              <span class="label-text-alt text-red-500"><%%= @<%= singular_name %>.errors[:<%= association[:foreign_key] %>].first %></span>
            </label>
          <%% end %>
        </div>
<% end -%>

<% end -%>
        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%%= link_to admin_<%= plural_name %>_path, class: "btn btn-ghost" do %>
            Cancel
          <%% end %>
          <%%= form.submit "Create <%= humanized_name %>", class: "btn btn-primary" %>
        </div>
      <%% end %>
    </div>
  </div>
</div>
