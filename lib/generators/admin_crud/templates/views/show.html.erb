<%% content_for :title, @<%= singular_name %>.respond_to?(:name) ? @<%= singular_name %>.name : "<%= humanized_name %>" %>

<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%%= link_to admin_<%= plural_name %>_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to <%= humanized_plural_name %>
      <%% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white"><%%= @<%= singular_name %>.respond_to?(:name) ? @<%= singular_name %>.name : "<%= humanized_name %> #\#{@<%= singular_name %>.id}" %></h1>
      
      <div class="flex items-center space-x-3">
        <%%= link_to edit_admin_<%= singular_name %>_path(@<%= singular_name %>.id), class: "btn-primary" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit
        <%% end %>
        
        <%%= link_to admin_<%= singular_name %>_path(@<%= singular_name %>.id), 
            method: :delete,
            data: { confirm: "Are you sure you want to delete this <%= singular_name %>?" },
            class: "btn-error" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete
        <%% end %>
      </div>
    </div>
  </div>

  <!-- <%= humanized_name %> Content -->
  <div class="card">
    <div class="card-body">
      <div class="space-y-6">
<% all_form_fields.each do |field| -%>
<% if field[:type] == :attribute -%>
<% attribute = field[:attribute] -%>
        <!-- <%= attribute.name.humanize %> -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"><%= attribute.name.humanize %></label>
<% if attribute.type.to_s == 'text' -%>
          <div class="prose prose-gray dark:prose-invert max-w-none">
            <%%= <%= display_value_for(attribute, "@#{singular_name}") %> %>
          </div>
<% elsif attribute.type.to_s == 'boolean' -%>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%%= @<%= singular_name %>.<%= attribute.name %> ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300' %>">
            <%%= <%= display_value_for(attribute, "@#{singular_name}") %> %>
          </span>
<% else -%>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%%= <%= display_value_for(attribute, "@#{singular_name}") %> %></div>
<% end -%>
        </div>
<% elsif field[:type] == :enum -%>
        <!-- <%= field[:enum_name].humanize %> -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"><%= field[:enum_name].humanize %></label>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300">
            <%%= <%= display_value_for_enum(field[:enum_name], "@#{singular_name}") %> %>
          </span>
        </div>
<% elsif field[:type] == :association -%>
<% association = field[:association] -%>
        <!-- <%= association[:name].to_s.humanize %> -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"><%= association[:name].to_s.humanize %></label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%%= <%= display_value_for_association(association, "@#{singular_name}") %> %></div>
        </div>
<% end -%>

<% end -%>
        <!-- Metadata -->
        <div class="pt-6 border-t border-gray-200 dark:border-gray-600">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">ID</label>
              <div class="text-sm text-gray-900 dark:text-gray-100 font-mono"><%%= @<%= singular_name %>.id %></div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Created</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%%= @<%= singular_name %>.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%%= time_ago_in_words(@<%= singular_name %>.created_at) %> ago)</span>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Updated</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%%= @<%= singular_name %>.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%%= time_ago_in_words(@<%= singular_name %>.updated_at) %> ago)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>