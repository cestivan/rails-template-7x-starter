<div class="min-h-screen bg-gray-50 dark:bg-gray-900 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">LLM Requests</h1>
      <p class="mt-2 text-sm text-gray-700 dark:text-gray-300">
        View and monitor all LLM API requests
      </p>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
      <%% total_requests = @llm_requests.count %>
      <%% successful = @llm_requests.where(status: 'completed').count %>
      <%% failed = @llm_requests.where(status: 'failed').count %>
      <%% total_tokens = @llm_requests.where(status: 'completed').sum(:total_tokens) %>

      <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-1">
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Total Requests</dt>
              <dd class="mt-1 text-3xl font-semibold text-gray-900 dark:text-white"><%%= total_requests %></dd>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-1">
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Successful</dt>
              <dd class="mt-1 text-3xl font-semibold text-green-600 dark:text-green-400"><%%= successful %></dd>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-1">
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Failed</dt>
              <dd class="mt-1 text-3xl font-semibold text-red-600 dark:text-red-400"><%%= failed %></dd>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-1">
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Total Tokens</dt>
              <dd class="mt-1 text-3xl font-semibold text-blue-600 dark:text-blue-400"><%%= number_with_delimiter(total_tokens) %></dd>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Table -->
    <div class="bg-white dark:bg-gray-800 shadow-md rounded-lg overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
          <thead class="bg-gray-50 dark:bg-gray-700">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Status</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Prompt</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Model</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Tokens</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Duration</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Created</th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
            <%% @llm_requests.each do |llm_request| %>
              <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                <td class="px-6 py-4 whitespace-nowrap">
                  <%% case llm_request.status %>
                  <%% when 'completed' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                      Completed
                    </span>
                  <%% when 'failed' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200">
                      Failed
                    </span>
                  <%% when 'processing' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                      Processing
                    </span>
                  <%% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-200">
                      Pending
                    </span>
                  <%% end %>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-900 dark:text-gray-100 max-w-xs truncate">
                    <%%= llm_request.prompt %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                  <%%= llm_request.model %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                  <%%= number_with_delimiter(llm_request.total_tokens) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                  <%% if llm_request.duration %>
                    <%%= "#{llm_request.duration.round(2)}s" %>
                  <%% else %>
                    -
                  <%% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                  <%%= llm_request.created_at.strftime('%Y-%m-%d %H:%M') %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%%= link_to 'View', admin_llm_request_path(llm_request), class: 'text-blue-600 hover:text-blue-900 dark:text-blue-400 dark:hover:text-blue-300' %>
                </td>
              </tr>
            <%% end %>
          </tbody>
        </table>
      </div>

      <%% if @llm_requests.empty? %>
        <div class="text-center py-12">
          <p class="text-gray-500 dark:text-gray-400">No LLM requests yet.</p>
        </div>
      <%% end %>
    </div>
  </div>
</div>
