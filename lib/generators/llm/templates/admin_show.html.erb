<div class="min-h-screen bg-gray-50 dark:bg-gray-900 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white">LLM Request #<%%= @llm_request.id %></h1>
          <p class="mt-2 text-sm text-gray-700 dark:text-gray-300">
            Created at <%%= @llm_request.created_at.strftime('%Y-%m-%d %H:%M:%S') %>
          </p>
        </div>
        <div>
          <%%= link_to 'Back to List', admin_llm_requests_path, class: 'inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700' %>
        </div>
      </div>
    </div>

    <!-- Status Card -->
    <div class="bg-white dark:bg-gray-800 shadow-md rounded-lg p-6 mb-6">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Status</dt>
          <dd class="mt-1">
            <%% case @llm_request.status %>
            <%% when 'completed' %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                Completed
              </span>
            <%% when 'failed' %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200">
                Failed
              </span>
            <%% when 'processing' %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                Processing
              </span>
            <%% else %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-200">
                Pending
              </span>
            <%% end %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Model</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100 font-mono"><%%= @llm_request.model %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Tokens</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100">
            <%%= number_with_delimiter(@llm_request.total_tokens) %>
            <span class="text-gray-500 dark:text-gray-400 text-xs">
              (prompt: <%%= @llm_request.prompt_tokens %>, completion: <%%= @llm_request.completion_tokens %>)
            </span>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Duration</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100">
            <%% if @llm_request.duration %>
              <%%= "#{@llm_request.duration.round(2)}s" %>
            <%% else %>
              -
            <%% end %>
          </dd>
        </div>
      </div>

      <%% if @llm_request.cost > 0 %>
        <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Estimated Cost</dt>
          <dd class="mt-1 text-lg font-semibold text-gray-900 dark:text-gray-100">
            $<%%= number_with_precision(@llm_request.cost, precision: 6) %>
          </dd>
        </div>
      <%% end %>
    </div>

    <!-- Prompt Card -->
    <div class="bg-white dark:bg-gray-800 shadow-md rounded-lg p-6 mb-6">
      <h2 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Prompt</h2>
      <div class="bg-gray-50 dark:bg-gray-900 rounded-md p-4 font-mono text-sm text-gray-900 dark:text-gray-100 whitespace-pre-wrap break-words"><%%= @llm_request.prompt %></div>
    </div>

    <!-- Response Card -->
    <%% if @llm_request.response.present? %>
      <div class="bg-white dark:bg-gray-800 shadow-md rounded-lg p-6 mb-6">
        <h2 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Response</h2>
        <div class="bg-gray-50 dark:bg-gray-900 rounded-md p-4 font-mono text-sm text-gray-900 dark:text-gray-100 whitespace-pre-wrap break-words"><%%= @llm_request.response %></div>
      </div>
    <%% end %>

    <!-- Error Card -->
    <%% if @llm_request.error_message.present? %>
      <div class="bg-white dark:bg-gray-800 shadow-md rounded-lg p-6 mb-6">
        <h2 class="text-lg font-medium text-red-600 dark:text-red-400 mb-4">Error Details</h2>
        <div class="bg-red-50 dark:bg-red-900/20 rounded-md p-4">
          <p class="text-sm font-medium text-gray-900 dark:text-gray-100 mb-2"><%%= @llm_request.error_class %></p>
          <p class="text-sm text-gray-700 dark:text-gray-300 font-mono"><%%= @llm_request.error_message %></p>
        </div>
      </div>
    <%% end %>

    <!-- Metadata Card -->
    <%% if @llm_request.metadata.present? %>
      <div class="bg-white dark:bg-gray-800 shadow-md rounded-lg p-6">
        <h2 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Metadata</h2>
        <pre class="bg-gray-50 dark:bg-gray-900 rounded-md p-4 text-sm text-gray-900 dark:text-gray-100 overflow-x-auto"><%%= JSON.pretty_generate(@llm_request.metadata) %></pre>
      </div>
    <%% end %>
  </div>
</div>
